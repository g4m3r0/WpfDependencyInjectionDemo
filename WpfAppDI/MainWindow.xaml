<Window x:Class="WpfAppDI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppDI"
        mc:Ignorable="d"
        FontSize="25"
        Title="MainWindow" Height="250" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="Data" />
            <Button x:Name="getData" Padding="20 10" Click="getData_Click">Get Data</Button>
            <Button x:Name="getChildForm" Padding="20 10" Click="getChildForm_Click">Open Child Form</Button>

       </StackPanel>
    </Grid>
</Window>
